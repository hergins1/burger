<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Eat Da Burger</h1>
    </div>

    <div class="col-md-12 text-center">
      <h2>Burger Menu</h2>
      <div class="row">
        
          {{#each burgers}}
          {{#unless this.devoured}}
          <div class="col-md-9 text-center">
            <pre>
              {{this.id}}. {{this.burger_name}}
            </pre>
          </div>
          <div class="col-md-3 text-center">
            <form class="devour-form button-size">
              <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
              <button type="submit" class="btn btn-default">Eat it!</button>
            </form>
          </div>
          {{/unless}}
          {{/each}}
        
      </div>
    </div>
    <div class="col-med-12 text-center">
      <h2>Burgers You've Eaten</h2>
        {{#each burger_data}}
          {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
          {{/if}}
        {{/each}}
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-12 text-center enter_section">
      <form action="api/burgers/" method="POST">
        <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
      </form>
      <p>Submit New Burger Here!</p>
    </div>
  </div>
</div>